<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<GridPane fx:id="calendarEventBox" vgap="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fi.patrikmarin.infoboard.controller.CalendarEventController">
   <styleClass>
   	  <String fx:value="calendarblock" />
   </styleClass>
   <children>
      <Label fx:id="calendarEventTimeLabel" text="18:00" GridPane.hgrow="NEVER">
         <styleClass>
            <String fx:value="main-color" />
            <String fx:value="calendarblock-time" />
            <String fx:value="calendarblock-main" />
         </styleClass>
      </Label>
      <Label fx:id="calendarEventTitleLabel" text="2h - Espoonlahden TN 2" GridPane.columnSpan="2" GridPane.rowIndex="1">
         <styleClass>
            <String fx:value="secondary-color" />
            <String fx:value="calendarblock-info" />
         </styleClass>
      </Label>
      <Label fx:id="calendarEventInfoLabel" text="EPS Rock Reenit 20" GridPane.columnIndex="1">
         <styleClass>
            <String fx:value="calendarblock-main" />
            <String fx:value="main-color" />
         </styleClass>
      </Label>
   </children>
   <columnConstraints>
      <ColumnConstraints hgrow="NEVER" minWidth="10.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
</GridPane>
